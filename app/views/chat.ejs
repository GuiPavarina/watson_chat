<!DOCTYPE HTML>
<html lang="pt-br">
	<head>
		<meta charset="UTF-8">

		<title>Watson Chat</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<!-- JQUERY -->
		<script src="js/jquery-3.2.1.min.js"></script>
		<!-- bootstrap -->
		<link rel="stylesheet" href="css/bootstrap.min.css">
		<!-- style -->
		<link href="css/style.css" rel="stylesheet">
	
	</head>

	<body>
	
		<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
			<div class="container">
				<div class="navbar-header">
					<a class="navbar-brand" href="#">Watson</a>
				</div>
			</div>
		</nav>
	
		<div class="container">
            <div class="row talk" id="talk">
				<div class="col-xs-12" id="dialog"></div>       
            </div>
        </div>
		
		<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
			<div class="container">
				<div class="panel-body message-field">

					<div class="col-md-12">
						<div class="input-group">
							<input type="text" class="form-control" placeholder="Type your message here" id="message">
							<input type="hidden" value="<%=formData.nickname%>" id="nickname">
							<span class="input-group-btn">
								<button class="btn btn-default" type="button" id="send_message">></button>
							</span>
						</div>
					</div>
				</div>
			</div>
		</nav>		
		
		<script src="js/bootstrap.min.js"></script>
		<script src="/socket.io/socket.io.js"></script>
		<script src="js/script.js"></script>

	</body>
</html>